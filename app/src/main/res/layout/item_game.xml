<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_xs"
    app:cardCornerRadius="@dimen/radius_m">

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:contentDescription="@string/home_team_label"
                    android:id="@+id/iv_home"
                    android:layout_width="@dimen/image_size_m"
                    android:layout_height="@dimen/image_size_m"/>

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_l"
                    android:layout_marginStart="@dimen/padding_m"
                    android:layout_marginEnd="@dimen/padding_m"
                    tools:text="HOME"/>

                <TextView
                    android:id="@+id/tv_home_scoring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_l"
                    android:layout_marginStart="@dimen/padding_m"
                    android:layout_marginEnd="@dimen/padding_m"
                    tools:text="H"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_l"
                    android:layout_marginStart="@dimen/padding_m"
                    android:layout_marginEnd="@dimen/padding_m"
                    android:text="@string/score_spacer"
                    />

                <TextView
                    android:id="@+id/tv_away_scoring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_l"
                    android:layout_marginStart="@dimen/padding_m"
                    android:layout_marginEnd="@dimen/padding_m"
                    tools:text="A"/>

                <TextView
                    android:id="@+id/tv_away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_l"
                    android:layout_marginStart="@dimen/padding_m"
                    android:layout_marginEnd="@dimen/padding_m"
                    tools:text="AWAY"/>

                <ImageView
                    android:contentDescription="@string/away_team_label"
                    android:id="@+id/iv_away"
                    android:layout_width="@dimen/image_size_m"
                    android:layout_height="@dimen/image_size_m"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_scheduled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_s"
                    android:layout_marginStart="@dimen/padding_m"
                    android:layout_marginEnd="@dimen/padding_m"
                    tools:text="scheduled"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_s"
                    android:layout_marginStart="@dimen/padding_m"
                    android:layout_marginEnd="@dimen/padding_m"
                    tools:text="status"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/rb_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>